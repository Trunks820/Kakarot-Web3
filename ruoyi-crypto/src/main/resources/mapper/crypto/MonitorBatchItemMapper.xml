<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.crypto.mapper.MonitorBatchItemMapper">
    
    <resultMap id="MonitorBatchItemResult" type="com.ruoyi.crypto.domain.MonitorBatchItem">
        <id property="id" column="id"/>
        <result property="batchId" column="batch_id"/>
        <result property="taskId" column="task_id"/>
        <result property="batchNo" column="batch_no"/>
        <result property="targetId" column="target_id"/>
        <result property="itemOrder" column="item_order"/>
        <result property="ca" column="ca"/>
        <result property="tokenName" column="token_name"/>
        <result property="tokenSymbol" column="token_symbol"/>
        <result property="marketCap" column="market_cap"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectMonitorBatchItemById" parameterType="Long" resultMap="MonitorBatchItemResult">
        select id, batch_id, task_id, batch_no, target_id, item_order, 
               ca, token_name, token_symbol, market_cap, 
               status, create_time, update_time
        from monitor_batch_item_v2
        where id = #{id}
    </select>

    <select id="selectByBatchId" parameterType="Long" resultMap="MonitorBatchItemResult">
        select id, batch_id, task_id, batch_no, target_id, item_order, 
               ca, token_name, token_symbol, market_cap, 
               status, create_time, update_time
        from monitor_batch_item_v2
        where batch_id = #{batchId}
        order by item_order, id
    </select>

    <insert id="insertMonitorBatchItem" parameterType="com.ruoyi.crypto.domain.MonitorBatchItem" useGeneratedKeys="true" keyProperty="id">
        insert into monitor_batch_item_v2
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="batchId != null">batch_id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="batchNo != null">batch_no,</if>
            <if test="targetId != null">target_id,</if>
            <if test="itemOrder != null">item_order,</if>
            <if test="ca != null and ca != ''">ca,</if>
            <if test="tokenName != null">token_name,</if>
            <if test="tokenSymbol != null">token_symbol,</if>
            <if test="marketCap != null">market_cap,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="batchId != null">#{batchId},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="batchNo != null">#{batchNo},</if>
            <if test="targetId != null">#{targetId},</if>
            <if test="itemOrder != null">#{itemOrder},</if>
            <if test="ca != null and ca != ''">#{ca},</if>
            <if test="tokenName != null">#{tokenName},</if>
            <if test="tokenSymbol != null">#{tokenSymbol},</if>
            <if test="marketCap != null">#{marketCap},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <insert id="insertBatchItems" parameterType="java.util.List">
        insert into monitor_batch_item_v2 
        (batch_id, task_id, batch_no, target_id, item_order, ca, token_name, token_symbol, market_cap, create_time)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.batchId}, #{item.taskId}, #{item.batchNo}, #{item.targetId}, #{item.itemOrder}, 
             #{item.ca}, #{item.tokenName}, #{item.tokenSymbol}, #{item.marketCap}, #{item.createTime})
        </foreach>
    </insert>

    <update id="updateMonitorBatchItem" parameterType="com.ruoyi.crypto.domain.MonitorBatchItem">
        update monitor_batch_item_v2
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMonitorBatchItemById" parameterType="Long">
        delete from monitor_batch_item_v2 where id = #{id}
    </delete>

    <delete id="deleteMonitorBatchItemByIds" parameterType="Long">
        delete from monitor_batch_item_v2 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteByBatchId" parameterType="Long">
        delete from monitor_batch_item_v2 where batch_id = #{batchId}
    </delete>

</mapper>

